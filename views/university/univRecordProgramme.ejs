<%- include ../partials/headerMainUniversity %>
<div class="maindiv">
    <nav>
        <aside class="sideleft">
            <div><a href="/university/<%= idAdmin %>/<%= idUniv %>/program">+ Record Programme</a></div>
        </aside>
    </nav>
    <nav>
        <aside class="sideright"><h1>Programme List</h1>
            <!-- <div class="searchbar">
                <input type="text" placeholder="Search" class="search" required>
                <input type="button" value="Search" class="buttonsearch">
            </div> -->
            <table cellspacing='0'>
                <thead>
                    <tr>
                        <th>No</th>
                        <th>Programme Name</th>
                        <th>Description</th>
                        <th>Closing Date</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% if(programmeList.length > 0) { let i=1; %>
                        <% programmeList.forEach(function(programme) { %>
                            <tr>
                                <td><%= i %></td>
                                <td><%= programme.programmeName  %></td>
                                <td><%= programme.description  %></td>
                                <td><%= moment(programme.closingDate).format("D MMMM YYYY") %></td>
                                <td>
                                    <button type="submit" class="buttonimg">
                                        <a href="/university/<%= idAdmin %>/edit/<%= programme._id %>" type="submit" class="tableimg">Edit</a>
                                    </button>
                                    <form style="margin-top: 10px;" action="/university/<%= idAdmin %>/<%= programme._id %>?_method=DELETE" method="POST">
                                        <button type="submit" class="buttonimg"><a class="tableimg">Delete</a></button>
                                    </form>
                                </td>                                    
                            </tr>
                        <% i++; }) %>
                        <% } else { %>
                            <tr>
                                <td colspan="5">No Data Found</td>
                            </tr>
                    <% } %>
                </tbody>
            </table>
        </aside>
    </nav>
</div>
<%- include ../partials/footerSAS %>